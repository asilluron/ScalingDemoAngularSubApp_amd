{
    "basePath": "",
    "frameworks": ["jasmine", "requirejs"],
    "files": [
        "src/blog-content/main-karma.js", {
            "pattern": "spec/blog-content/**/*.js",
            "included": false
        }, {
            "pattern": "src/vendor/**/*.js",
            "included": false,
            "watched": false
        },
        {
            "pattern": "src/blog-content/**/*.js",
            "included": false,
            "watched": true
        }
    ],
    "preprocessors": {
        "src/blog-content/**/*.js": ["coverage"]
    },
    "reporters": ["progress", "coverage"],
    "coverageReporter": {
        "type": {
                "$filter": "target",
                "jenkins": {"$value": "cobertura"},
                "local": {"$value": "html"}
            },
        "dir": "exports/jasmine/coverage/"
    },
    "port": 9876,
    "runnerPort": 9100,
    "colors": true,
    "autoWatch": true,
    "browsers": {
                "$filter": "target",
                "jenkins": {"$value": ["PhantomJS", "Chrome", "Firefox"]},
                "local": {"$value": ["PhantomJS"]}
            },
    "captureTimeout": 60000,
    "singleRun": {
                "$filter": "target",
                "jenkins": {"$value": true},
                "local": {"$value": false}
            }
}
